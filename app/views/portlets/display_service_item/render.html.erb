<% if @service_item.gallery? %>
  <div class="container news-gallerys">
    <div class="row">
      <div class="span4">&nbsp;</div>
      <% @service_item.gallery.each do |image| %>
        <div class="span2 <%= cycle("first_news_child", "", "", "last_news_child") %>">
          <%= link_to image_tag(image.url(:big), :class => "news-item-img"), image.url(:fancy), :class => "fancybox ", :rel => "gallery_news" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
