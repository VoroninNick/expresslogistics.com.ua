<%#= @service_item.inspect %>
<% if cookies[:language] == "eng" %>
  <div class="container news-item-pad">
    <div class="row">
      <div class="span4 news-item-make-full">
        <%= image_tag(@service_item.icon_main.url(:main), :class => "news-item-img", :style => "border: 0 !important;", :alt => "#{@service_item.name_eng}") %>
      </div>
      <div class="span8 news-item-make-full">
        <h1 class="news-item-h1"><%= @service_item.name_eng %></h1>
        <p class="news-descr-small"><%= @service_item.intro_eng.html_safe %></p>
        <div class="service-item-descr-full"><%= @service_item.descr_eng.html_safe %></div>
        <% if @service_item.gallery? %>
          <p><h3 style="color: #F27321;">Gallery</h3></p>
        <% end %>
      </div>
    </div>
  </div>
